<ui:FluentWindow x:Class="PRND_InfraredCapture.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRND_InfraredCapture"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        WindowCornerPreference="Default"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        xmlns:views="clr-namespace:PRND_InfraredCapture.Views"
        Width="1920" Height="1030"
        MaxWidth="1920" MaxHeight="1030"   
        DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ui:TitleBar 
            x:Name="TitleBar"
            Title="{Binding Title}"
            Grid.Row="0"
            CloseWindowByDoubleClickOnIcon="True">
        </ui:TitleBar>
        <ui:NavigationView Name="RootNavigation"  Grid.Row="1" Cursor="" IsBackButtonVisible="Collapsed" IsPaneToggleVisible="True" PaneDisplayMode="Left" OpenPaneLength="150" IsPaneOpen="False">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Icon="{ui:SymbolIcon Home24}" TargetPageType="{x:Type views:HomePage}"/>
                <ui:NavigationViewItem Content="Setting" Icon="{ui:SymbolIcon Settings24}" TargetPageType="{x:Type views:SettingPage}"/>
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
