<Page x:Class="PRND_InfraredCapture.Views.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRND_InfraredCapture.Views"
      xmlns:controls="clr-namespace:CP.Controls.Controls;assembly=CP.Controls"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:CP.Controls.Behaviors;assembly=CP.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage"
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=SettingViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <GroupBox Header="PLC Setting(Address 는 D로 고정)" Margin="10" Grid.Column="1">
                <StackPanel>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="PLC Address/Port : " Grid.Column="0" VerticalAlignment="Center"/>
                        <Grid Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding PLCAddress}" Grid.Column="0" Margin="0 0 10 0"/>
                            <TextBox Text="{Binding PLCPort}" Grid.Column="1"/>
                        </Grid>
                    </Grid>
                    <!-- PLC to PC -->
                    <GroupBox Header="PLC to PC" Margin="5">
                        <Grid Margin="5">
                            <Grid.Resources>
                                <!-- 줄간격 최소화 -->
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,2,6,2"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,2,0,2"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="MinHeight" Value="35"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <!-- 행 정의: 항목 수만큼 Auto -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 1 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 2 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 3 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 5 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 7 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 8 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 9 -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="PLC Status Address:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox  Text="{Binding PLCStatusAddress, Mode=TwoWay}" Grid.Row="0" Grid.Column="1"/>

                            <TextBlock Text="Turn Table Angle Address:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox  Text="{Binding TurnTableAngleAddress, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>

                            <TextBlock Text="Light1 Status Address:" Grid.Row="2" Grid.Column="0"/>
                            <TextBox  Text="{Binding Light1StatusAddress, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Light2 Status Address:" Grid.Row="3" Grid.Column="0"/>
                            <TextBox  Text="{Binding Light2StatusAddress, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

                            <TextBlock Text="Light3 Status Address:" Grid.Row="4" Grid.Column="0"/>
                            <TextBox  Text="{Binding Light3StatusAddress, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

                            <TextBlock Text="Light4 Status Address:" Grid.Row="5" Grid.Column="0"/>
                            <TextBox  Text="{Binding Light4StatusAddress, Mode=TwoWay}" Grid.Row="5" Grid.Column="1"/>

                            <TextBlock Text="Robot1 Status Address:" Grid.Row="6" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot1StatusAddress, Mode=TwoWay}" Grid.Row="6" Grid.Column="1"/>

                            <TextBlock Text="Robot2 Status Address:" Grid.Row="7" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot2StatusAddress, Mode=TwoWay}" Grid.Row="7" Grid.Column="1"/>

                            <TextBlock Text="Robot3 Status Address:" Grid.Row="8" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot3StatusAddress, Mode=TwoWay}" Grid.Row="8" Grid.Column="1"/>

                            <TextBlock Text="Robot4 Status Address:" Grid.Row="9" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot4StatusAddress, Mode=TwoWay}" Grid.Row="9" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>

                    <!-- PC to PLC -->
                    <GroupBox Header="PC to PLC" Margin="5">
                        <Grid Margin="5">
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,2,6,2"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                                <Style TargetType="TextBox">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="0,2,0,2"/>
                                    <Setter Property="FontSize" Value="14"/>
                                    <Setter Property="MinHeight" Value="35"/>
                                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                                </Style>
                            </Grid.Resources>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- 0 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 1 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 2 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 3 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 4 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 5 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 6 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 7 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 8 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 9 -->
                                <RowDefinition Height="Auto"/>
                                <!-- 10 -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="Heartbeat Address:" Grid.Row="0" Grid.Column="0"/>
                            <TextBox  Text="{Binding HeartBeatAddress, Mode=TwoWay}" Grid.Row="0" Grid.Column="1"/>
                            
                            <TextBlock Text="PLC Response Address:" Grid.Row="1" Grid.Column="0"/>
                            <TextBox  Text="{Binding PLCResponseAddress, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>
                            
                            <TextBlock Text="Module1 Light On Address:" Grid.Row="2" Grid.Column="0"/>
                            <TextBox  Text="{Binding Module1LightOnAddress, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

                            <TextBlock Text="Module2 Light On Address:" Grid.Row="3" Grid.Column="0"/>
                            <TextBox  Text="{Binding Module2LightOnAddress, Mode=TwoWay}" Grid.Row="3" Grid.Column="1"/>

                            <TextBlock Text="Module3 Light On Address:" Grid.Row="4" Grid.Column="0"/>
                            <TextBox  Text="{Binding Module3LightOnAddress, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

                            <TextBlock Text="Module4 Light On Address:" Grid.Row="5" Grid.Column="0"/>
                            <TextBox  Text="{Binding Module4LightOnAddress, Mode=TwoWay}" Grid.Row="5" Grid.Column="1"/>

                            <TextBlock Text="Robot1 Move Address:" Grid.Row="6" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot1MoveAddress, Mode=TwoWay}" Grid.Row="6" Grid.Column="1"/>

                            <TextBlock Text="Robot2 Move Address:" Grid.Row="7" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot2MoveAddress, Mode=TwoWay}" Grid.Row="7" Grid.Column="1"/>

                            <TextBlock Text="Robot3 Move Address:" Grid.Row="8" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot3MoveAddress, Mode=TwoWay}" Grid.Row="8" Grid.Column="1"/>

                            <TextBlock Text="Robot4 Move Address:" Grid.Row="9" Grid.Column="0"/>
                            <TextBox  Text="{Binding Robot4MoveAddress, Mode=TwoWay}" Grid.Row="9" Grid.Column="1"/>

                            <TextBlock Text="Distance Alarm Address:" Grid.Row="10" Grid.Column="0"/>
                            <TextBox  Text="{Binding DistanceAlarmAddress, Mode=TwoWay}" Grid.Row="10" Grid.Column="1"/>
                        </Grid>
                    </GroupBox>

                </StackPanel>
            </GroupBox>

        </StackPanel>
        <StackPanel Grid.Column ="1">
            <GroupBox Header="LightCurtain Setting" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Serial Com Port" VerticalAlignment="Center" Margin="10"/>
                    <ComboBox ItemsSource="{Binding AvailableComPortCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedComPort, Mode=TwoWay}" Grid.Column="1" Margin="10"/>
                    <TextBlock Text="Baudrate" Grid.Column="2" VerticalAlignment="Center" Margin="10"/>
                    <ComboBox ItemsSource="{Binding AvailableBaudRateCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedBaudRate, Mode=TwoWay}" Grid.Column="3" Margin="10"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="InfraredCapture Setting" Margin="10">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="카메라 추가" Command="{Binding AddCamCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                        <Button Grid.Column="1" Content="카메라 삭제" Command="{Binding DelCamCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <ScrollViewer Height="150" Margin="10">
                        <ItemsControl ItemsSource="{Binding CamPathList}" AlternationCount="1000000">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- AlternationIndex: 컨테이너(ContentPresenter)에서 읽기 -->
                                        <TextBlock Grid.Column="0"
               Margin="5"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               Text="{Binding Path=(ItemsControl.AlternationIndex),
                              RelativeSource={RelativeSource AncestorType=ContentPresenter},
                              Converter={StaticResource AddNumberConverter},
                              ConverterParameter=1}" />

                                        <!-- DataContext는 ItemsControl의 DataContext를 바라보게 -->
                                        <controls:FilePathTextBox Grid.Column="1"
                              Margin="5"
                              IsFolderPicker="False"
                              SupportedExtentions="{Binding DataContext.SupportedRecipeExtensions,
                                                   RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                              FilePath="{Binding FilePath, Mode=TwoWay}" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    <controls:FilePathTextBox ControlNameWidth="150" ControlName="이미지 저장경로 : " FilePath="{Binding ImageDataSavePath, Mode=TwoWay}" Margin="10" IsFolderPicker="True"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Laser Profile Setting" Margin="10">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="레이저 추가" Command="{Binding AddLaserCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                        <Button Grid.Column="1" Content="레이저 삭제" Command="{Binding DelLaserCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <ScrollViewer Height="150" Margin="10">
                        <ItemsControl ItemsSource="{Binding LaserConnectionList}" AlternationCount="100000">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="5"
                       VerticalAlignment="Center" HorizontalAlignment="Center"
                       Text="{Binding Path=(ItemsControl.AlternationIndex),
                              RelativeSource={RelativeSource AncestorType=ContentPresenter},
                              Converter={StaticResource AddNumberConverter},
                              ConverterParameter=1}"/>

                                        <!-- IP -->
                                        <TextBlock Grid.Column="1" Margin="5" VerticalAlignment="Center" Text="IP : " />
                                        <TextBox Grid.Column="2" Margin="5" VerticalAlignment="Center" Text="{Binding IPAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="예: 192.168.0.10"/>

                                        <!-- Port -->
                                        <TextBlock Grid.Column="3" Margin="5" VerticalAlignment="Center" Text="Port : " />
                                        <TextBox Grid.Column="4" Margin="5" VerticalAlignment="Center" Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="예: 2111"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Robot Communication Setting" Margin="10">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Content="로봇 추가" Command="{Binding AddRobotCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                        <Button Grid.Column="1" Content="로봇삭제" Command="{Binding DelRobotCommand}" Margin="5" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <ScrollViewer Height="150" Margin="10">
                        <ItemsControl ItemsSource="{Binding RobotConnectionList}" AlternationCount="100000">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Margin="5"
           VerticalAlignment="Center" HorizontalAlignment="Center"
           Text="{Binding Path=(ItemsControl.AlternationIndex),
                  RelativeSource={RelativeSource AncestorType=ContentPresenter},
                  Converter={StaticResource AddNumberConverter},
                  ConverterParameter=1}"/>

                                        <!-- IP -->
                                        <TextBlock Grid.Column="1" Margin="5" VerticalAlignment="Center" Text="IP : " />
                                        <TextBox Grid.Column="2" Margin="5" VerticalAlignment="Center" Text="{Binding IPAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="예: 192.168.0.10"/>

                                        <!-- Port -->
                                        <TextBlock Grid.Column="3" Margin="5" VerticalAlignment="Center" Text="Port : " />
                                        <TextBox Grid.Column="4" Margin="5" VerticalAlignment="Center" Text="{Binding Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" ToolTip="예: 2111"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <GroupBox Header="Program Log" Margin="10" >
                <ListBox BorderThickness="1" ItemsSource="{Binding ProgramLogs, Mode=OneWay}"  Margin="5" FontSize="4" Height="300">
                    <i:Interaction.Behaviors>
                        <behaviors:ScrollIntoViewBehavior/>
                    </i:Interaction.Behaviors>
                </ListBox>
            </GroupBox>
        </StackPanel>
    </Grid>
    
</Page>
