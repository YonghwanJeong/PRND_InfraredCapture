<Page x:Class="PRND_InfraredCapture.Views.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRND_InfraredCapture.Views"
      xmlns:controls="clr-namespace:CP.Controls.Controls;assembly=CP.Controls"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:CP.Controls.Behaviors;assembly=CP.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage"
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=TestViewModel}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding PageLoadedCommmand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Content="{Binding OnOfflineBtnText}" Command="{Binding ControlOnOffLineCommand}" />
            <Button Content="Capture" Command="{Binding CaptureImageCommand}"/>
            <Button Content="LightCurtain Start" Command="{Binding LightCurtainStartCommand}"/>
            <Button Content="LightCurtain Stop" Command="{Binding LightCurtainStopCommand}"/>
            <Button Content="Laser Start" Command="{Binding LaserStartCommand}"/>
            <Button Content="Laser Stop" Command="{Binding LaserStopCommand}"/>
            <controls:FilePathTextBox ControlNameWidth="150" ControlName="Raw Source 경로: " FilePath="{Binding RawSourcePath, Mode=TwoWay}" Margin="10" IsFolderPicker="True"/>
            <controls:FilePathTextBox ControlNameWidth="150" ControlName="Convert Target 경로: " FilePath="{Binding ConvertTargetPath, Mode=TwoWay}" Margin="10" IsFolderPicker="True"/>
            <Button Content="Convert" Command="{Binding ConvertRawToBitmapCommand}"/>
            
        </StackPanel>
        <controls:ImagePanel Grid.Row="1" ImageSource="{Binding TestImage}" Height="300"/>
        <GroupBox Grid.Row="2" Header="Program Log" Margin="10" >
            <ListBox BorderThickness="1" ItemsSource="{Binding ProgramLogs, Mode=OneWay}"  Margin="5" FontSize="4" Height="300">
                <i:Interaction.Behaviors>
                    <behaviors:ScrollIntoViewBehavior/>
                </i:Interaction.Behaviors>
            </ListBox>
        </GroupBox>
    </Grid>
</Page>
