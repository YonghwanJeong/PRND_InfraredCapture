<Page x:Class="PRND_InfraredCapture.Views.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRND_InfraredCapture.Views"
      xmlns:controls="clr-namespace:CP.Controls.Controls;assembly=CP.Controls"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:CP.Controls.Behaviors;assembly=CP.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage"
      DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=TestViewModel}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding PageLoadedCommmand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Content="{Binding OnOfflineBtnText}" Command="{Binding ControlOnOffLineCommand}" />
            <TextBox Text="{Binding CarNumber, Mode=TwoWay}"/>
            <Button Content="Start Insepction" Command="{Binding InspectionStartCommand}"/>
            <Button Content="Stop Insepction" Command="{Binding InspectionStopCommand}"/>
            <CheckBox Content="Is UsingLight" IsChecked="{Binding IsUsingLight}"/>
            <Button Content="LightCurtain Start" Command="{Binding LightCurtainStartCommand}"/>
            <Button Content="LightCurtain Stop" Command="{Binding LightCurtainStopCommand}"/>
            <Button Content="Laser Start" Command="{Binding LaserStartCommand}"/>
            <Button Content="Laser Stop" Command="{Binding LaserStopCommand}"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Capture Cam1" Command="{Binding CaptureImageCommand}" CommandParameter="0"/>
            <Button Content="Capture Cam2" Command="{Binding CaptureImageCommand}" CommandParameter="1"/>
            <Button Content="Capture Cam3" Command="{Binding CaptureImageCommand}" CommandParameter="2"/>
            <Button Content="Capture Cam4" Command="{Binding CaptureImageCommand}" CommandParameter="3"/>
            <Button Content="Get Distance 1" Command="{Binding GetLaserDistanceCommand}" CommandParameter="0"/>
            <Button Content="Get Distance 2" Command="{Binding GetLaserDistanceCommand}" CommandParameter="1"/>
            <Button Content="Get Distance 3" Command="{Binding GetLaserDistanceCommand}" CommandParameter="2"/>
            <Button Content="Get Distance 4" Command="{Binding GetLaserDistanceCommand}" CommandParameter="3"/>
        </StackPanel>
        <StackPanel Grid.Column="2">

        </StackPanel>
        <StackPanel Grid.Column="3">
            
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <controls:FilePathTextBox ControlNameWidth="150" ControlName="Raw Source 경로: " FilePath="{Binding RawSourcePath, Mode=TwoWay}" Margin="10" IsFolderPicker="True"/>
            <controls:FilePathTextBox ControlNameWidth="150" ControlName="Convert Target 경로: " FilePath="{Binding ConvertTargetPath, Mode=TwoWay}" Margin="10" IsFolderPicker="True"/>
            <Button Content="Convert" Command="{Binding ConvertRawToBitmapCommand}"/>
        </StackPanel>

        <!--<controls:ImagePanel Grid.Row="1" ImageSource="{Binding TestImage}" Height="300"/>-->
        <GroupBox Grid.Row="2" Header="Program Log" Margin="10" Grid.ColumnSpan="4" >
            <ListBox BorderThickness="1" ItemsSource="{Binding ProgramLogs, Mode=OneWay}"  Margin="5" FontSize="4" Height="300">
                <i:Interaction.Behaviors>
                    <behaviors:ScrollIntoViewBehavior/>
                </i:Interaction.Behaviors>
            </ListBox>
        </GroupBox>
    </Grid>
</Page>
