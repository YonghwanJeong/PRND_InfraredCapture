<Application x:Class="PRND_InfraredCapture.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PRND_InfraredCapture"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="pack://application:,,,/CP.Controls;component/Themes/Generic.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/CP.Controls;component/Converters/ConverterRd.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <di:ViewModelLocator xmlns:di="clr-namespace:PRND_InfraredCapture.Locators" x:Key="ViewModelLocator" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
